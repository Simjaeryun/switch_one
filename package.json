{
  "name": "switch-one",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:exchange": "turbo run dev --filter=switch-exchange",
    "start": "turbo run start",
    "build": "turbo run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
