    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
